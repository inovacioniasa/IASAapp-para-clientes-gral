rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ===================================
    // üõ†Ô∏è FUNCI√ìN ADMIN
    // ===================================
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'juanv27072017@gmail.com';
    }

    // ===================================
    // üëë ADMIN - ACCESO TOTAL A TODO
    // ===================================
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // ===============================
    // NOTICIAS / NEWS UPLOADS
    // ===============================
    match /news_uploads/{allPaths=**} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.size < 50 * 1024 * 1024
                    && (request.resource.contentType.matches('image/.*') 
                        || request.resource.contentType.matches('video/.*'));
      allow update, delete: if request.auth != null;
    }

    // ===============================
    // IM√ÅGENES DE LA COMUNIDAD
    // Ruta: community_images/${currentUser.uid}/${Date.now()}.jpg
    // ===============================
    match /community_images/{userId}/{imageFile} {
      // Lectura p√∫blica
      allow read: if true;

      // Crear: s√≥lo el usuario cuya carpeta es 'userId' puede subir
      allow create: if request.auth != null && request.auth.uid == userId;

      // Actualizar/Borrar: s√≥lo el mismo usuario
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // ===============================
    // FOTO DE PERFIL
    // Ruta: profile_pictures/${currentUser.uid}.jpg
    // ===============================
    match /profile_pictures/{userId}/{fileName} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Variante plana: profile_pictures/{fileName} (ej: <uid>.jpg)
    match /profile_pictures/{fileName} {
      allow read: if true;
      allow create: if request.auth != null && fileName == (request.auth.uid + '.jpg');
      allow update, delete: if request.auth != null && fileName == (request.auth.uid + '.jpg');
    }

    // ===============================
    // IM√ÅGENES DE NOTICIAS Y PRODUCTOS
    // ===============================
    match /news-images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /product_images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
